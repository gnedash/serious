@using Serious.Users.Models
@using Serious.Users.AppCode.Enums
@model ManageUserViewModel
@{
    ViewBag.Title = "Manage Users";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")    
    @*<script type="text/javascript" src="@Url.Content("~/Scripts/view/manage-users.js")"></script>*@
}

<h2>
    @ViewBag.Title.
</h2>
<div class="row">
    <div class="col-md-8">
        <h4>Active Users:</h4>
        <hr />
        @foreach (var user in Model.Users)
        {
            <div class="form-group">
                @user.Email   
                @if (user.IsOnline && user.Role != UserRoles.Admin) 
                {
                    <a href="#" class="email" email="@user.Email">Log Off</a>                
                }
             </div>
        }        
        </div>
</div>